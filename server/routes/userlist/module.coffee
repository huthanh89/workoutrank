mongoose = require('mongoose')

#--------------------------------------------------
# GET
#--------------------------------------------------

module.get = (req, res) ->
  db = req.db
  collection = db.get('usercollection')
  collection.find {}, {}, (e, docs) ->
    res.render 'userlist', 'userlist': docs
    return
  return

#--------------------------------------------------
# Exports
#--------------------------------------------------

module.exports = module

