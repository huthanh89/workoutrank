async    = require 'async'
mongoose = require 'mongoose'

#-------------------------------------------------------------------------------
# Models
#-------------------------------------------------------------------------------

exports.post = (req, res) ->

  async.waterfall [

    (callback) ->
      req.session.destroy()
      return callback null

  ], (err) ->

    res.clearCookie()
    res
    .status 200
    .json {}

  return


