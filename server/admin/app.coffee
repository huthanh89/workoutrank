#--------------------------------------------------------------
# Imports
#--------------------------------------------------------------

express = require 'express'
path    = require 'path'
router  = require './router/module'

#--------------------------------------------------------------
# Create App
#--------------------------------------------------------------

admin = express()

#--------------------------------------------------------------
# Configure App
#--------------------------------------------------------------

admin.set 'views', './static'

#--------------------------------------------------------------
# Handle Static Paths
#--------------------------------------------------------------

admin.use express.static(path.join(__dirname, '../../static'))

#--------------------------------------------------------------
# Handle routes
#--------------------------------------------------------------

admin.use '/', router

#--------------------------------------------------------------
# Exports
#--------------------------------------------------------------

module.exports = admin

