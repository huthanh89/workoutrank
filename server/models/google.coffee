#-------------------------------------------------------------------------------
# Imports
#-------------------------------------------------------------------------------

mongoose  = require 'mongoose'

#-------------------------------------------------------------------------------
# Schema
#-------------------------------------------------------------------------------

GoogleSchema = new mongoose.Schema
  googleID:
    type:   String
    unique: true
  accessToken:
    type:   String
  refreshToken:
    type:   String
,
  collection: 'google'

#-------------------------------------------------------------------------------
# Model Registration
#-------------------------------------------------------------------------------

model = mongoose.model('google', GoogleSchema)

#-------------------------------------------------------------------------------
# Exports
#-------------------------------------------------------------------------------

module.exports = model

