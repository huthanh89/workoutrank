#-------------------------------------------------------------------------------
# Imports
#-------------------------------------------------------------------------------

mongoose = require 'mongoose'

#-------------------------------------------------------------------------------
# Schema
#-------------------------------------------------------------------------------

UserSchema = new mongoose.Schema
  created:
    type: Date
  lastlogin:
    type: Date
  firstname:
    type: String
  username:
    type: String
  lastname:
    type: String
  email:
    type: String
    index:
      unique: true
  password:
    type: String
,
  collection: 'user'

#-------------------------------------------------------------------------------
# Model Registration
#-------------------------------------------------------------------------------

model = mongoose.model('user', UserSchema)

#-------------------------------------------------------------------------------
# Exports
#-------------------------------------------------------------------------------

module.exports = model

