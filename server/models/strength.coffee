#-------------------------------------------------------------------------------
# Imports
#-------------------------------------------------------------------------------

mongoose = require 'mongoose'

#-------------------------------------------------------------------------------
# Schema
#-------------------------------------------------------------------------------

StrengthSchema = new mongoose.Schema
  date:
    type: Date
  name:
    type: String
  type:
    type: Number
  note:
    type: String
  sets:
    type: Array
,
  collection: 'strength'

#-------------------------------------------------------------------------------
# Model Registration
#-------------------------------------------------------------------------------

model = mongoose.model('strength', StrengthSchema)

#-------------------------------------------------------------------------------
# Exports
#-------------------------------------------------------------------------------

module.exports = model

