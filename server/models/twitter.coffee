#-------------------------------------------------------------------------------
# Imports
#-------------------------------------------------------------------------------

mongoose  = require 'mongoose'

#-------------------------------------------------------------------------------
# Schema
#-------------------------------------------------------------------------------

TwitterSchema = new mongoose.Schema
  twitterID:
    type:   String
    unique: true
  token:
    type:   String
  tokenSecret:
    type:   String
,
  collection: 'twitter'

#-------------------------------------------------------------------------------
# Model Registration
#-------------------------------------------------------------------------------

model = mongoose.model('twitter', TwitterSchema)

#-------------------------------------------------------------------------------
# Exports
#-------------------------------------------------------------------------------

module.exports = model

