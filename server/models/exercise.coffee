#-------------------------------------------------------------------------------
# Imports
#-------------------------------------------------------------------------------

mongoose = require 'mongoose'

#-------------------------------------------------------------------------------
# Schema
#-------------------------------------------------------------------------------

ExerciseSchema = new mongoose.Schema
  strength: [
    date:
      type: Date
    name:
      type: String
    muscle:
      type: Number
    note:
      type: String
  ]
  user:
    type: mongoose.Schema.ObjectId
,
  collection: 'exercise'

#-------------------------------------------------------------------------------
# Model Registration
#-------------------------------------------------------------------------------

model = mongoose.model('exercise', ExerciseSchema)

#-------------------------------------------------------------------------------
# Exports
#-------------------------------------------------------------------------------

module.exports = model

