#-------------------------------------------------------------------------------
# Imports
#-------------------------------------------------------------------------------

_         = require 'lodash'
async     = require 'async'
moment    = require 'moment'
mongoose  = require 'mongoose'
crypto    = require 'crypto'

#-------------------------------------------------------------------------------
# Schema
#-------------------------------------------------------------------------------

FacebookSchema = new mongoose.Schema
  facebookID:
    type:   String
    unique: true
  name:
    type:   String
  accessToken:
    type:   String
  refreshToken:
    type:   String
,
  collection: 'facebook'

#-------------------------------------------------------------------------------
# Model Registration
#-------------------------------------------------------------------------------

model = mongoose.model('facebook', FacebookSchema)

#-------------------------------------------------------------------------------
# Exports
#-------------------------------------------------------------------------------

module.exports = model

