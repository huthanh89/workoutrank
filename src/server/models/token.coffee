#-------------------------------------------------------------------------------
# Imports
#-------------------------------------------------------------------------------

mongoose = require 'mongoose'

#-------------------------------------------------------------------------------
# Token Schema
#-------------------------------------------------------------------------------

schema = mongoose.Schema
  date:
    type:     Date
    required: true
  token:
    type:     String
    required: true
  user:
    type:     String
    required: true
,
  collection: 'token'

#-------------------------------------------------------------------------------
# Model Registration
#-------------------------------------------------------------------------------

model = mongoose.model('token', schema)

#-------------------------------------------------------------------------------
# Exports
#-------------------------------------------------------------------------------

module.exports = model

