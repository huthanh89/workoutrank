#-------------------------------------------------------------------------------
# Imports
#-------------------------------------------------------------------------------

mongoose = require 'mongoose'

#-------------------------------------------------------------------------------
# CConf Schema
#-------------------------------------------------------------------------------

schema = mongoose.Schema
  user:
    type: mongoose.Schema.ObjectId
    required: true
  date:
    type: Date
    required: true
  name:
    type: String
    required: true
  note:
    type: String
,
  collection: 'cardio'

#-------------------------------------------------------------------------------
# Model Registration
#-------------------------------------------------------------------------------

model = mongoose.model('cardio', schema)

#-------------------------------------------------------------------------------
# Exports
#-------------------------------------------------------------------------------

module.exports = model

