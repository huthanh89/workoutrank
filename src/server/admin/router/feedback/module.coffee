#-------------------------------------------------------------------------------
# Imports
#-------------------------------------------------------------------------------

_        = require 'lodash'
moment   = require 'moment'
async    = require 'async'
mongoose = require 'mongoose'

#-------------------------------------------------------------------------------
# Models
#-------------------------------------------------------------------------------

Feedback = mongoose.model('feedback')

#-------------------------------------------------------------------------------
# GET
#-------------------------------------------------------------------------------

module.get = (req, res) ->

  result = []

  async.waterfall [

    (callback) ->

      Feedback.find()
      .exec (err, feedbacks) ->
        return callback err if err
        result = feedbacks
        return callback null
      return

  ], (err) ->

    if err
      res
      .status 400
      .json   err

    res.json result

    return

#-------------------------------------------------------------------------------
# Exports
#-------------------------------------------------------------------------------

module.exports = module

