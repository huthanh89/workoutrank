.row
    .col-lg-7.col-center
        nav
            i.fa.fa-fw.fa-lg.fa-question-circle.breadcrumb-help#profile-help(style="cursor:pointer")
            ol.breadcrumb
                li.breadcrumb-item#profile-home
                    a Home
                li.breadcrumb-item.active
                    span Profile
.row
    .col-lg-7.col-center
        .card
            .card-header Profile
            .card-body
                form.form-horizontal
                    .form-group.form-row
                        #profile-picture-container
                            img#profile-picture(src="images/profile-icon.png" alt="No Profile Picture")
                        #profile-picture-delete-container
                            i.fa.fa-fw.fa-2x.fa-times-circle#profile-picture-delete
                    .form-group.form-row
                        label.col-sm-3.control-label Profile Picture
                        .col-sm-9
                            input.form-control-file#profile-upload(type="file" accept="image/*")
                    .form-group.form-row
                        label.col-sm-3.control-label(for='profile-firstname') First Name
                        .col-sm-9
                            input.form-control#profile-firstname(type='text', placeholder='First Name', name='firstname', autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false" required minlength="2" maxlength="15")
                    .form-group.form-row
                        label.col-sm-3.control-label(for='profile-lastname') Last Name
                        .col-sm-9
                            input.form-control#profile-lastname(type='text', placeholder='Last Name', name='lastname', autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false" required minlength="2" maxlength="15")
                    .form-group.row#profile-gender
                        label.col-sm-3.control-label(for='profile-gender') Gender
                        .col-sm-9
                            .radio.radio-inline
                                label
                                    input(type='radio', name='optradio', value=0)
                                    | Female
                            .radio.radio-inline
                                label
                                    input(type='radio', name='optradio', value=1)
                                    | Male
                    .form-group.form-row#profile-height-container
                        label.col-sm-3.control-label(for='profile-height') Height
                        .col-sm-9
                            input.form-control#profile-height(type="number", placeholder=0 required)
                    .form-group.form-row#profile-weight-container
                        label.col-sm-3.control-label(for='profile-weight') Weight
                        .col-sm-9
                            input.form-control#profile-weight(type="number", placeholder=0 required)
                    .form-group.form-row
                        label.col-sm-3.control-label(for='profile-birthday') Birthday
                        .col-sm-9
                            .input-group.date
                                input.form-control#profile-birthday(type='date', name='date',placeholder='yyyy-mm-dd', required)
                    .form-group
                        .col-xs-12
                            .float-right
                                button.btn.btn-lg.btn-primary#profile-submit
                                    span Update Profile