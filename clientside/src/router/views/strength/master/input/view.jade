.row
    .col-sm-12
        span
            b Add a new exercise
br
.row
    .col-sm-12
        form.form-horizontal#exercise-strength-form
            // Nav tabs
            ul.nav.nav-tabs(role='tablist')
                li.active(role='presentation')
                    a(href='#exercise-strength-basic' aria-controls='basic', role='tab', data-toggle='tab')
                        i.fa.fa-fw.fa-lg.fa-pencil
                        = ' '
                        | Basic
                li(role='presentation')
                    a(href='#exercise-strength-advance' aria-controls='advance', role='tab', data-toggle='tab')
                        i.fa.fa-fw.fa-lg.fa-cogs
                        = ' '
                        | Advance

            br

            // Tab panes

            .tab-content

                // Basic

                #exercise-strength-basic.tab-pane.active(role='tabpanel')
                    .form-group
                        label.col-sm-2.control-label(for='exercise-strength-muscle') Muscle
                        .col-sm-10
                            select.form-control#exercise-strength-muscle
                    .form-group
                        label.col-sm-2.control-label(for='exercise-strength-name') Name
                        .col-sm-10
                            input.form-control#exercise-strength-name(required)
                            .help-block.with-errors

                // Advance

                #exercise-strength-advance.tab-pane(role='tabpanel')
                    .form-group
                        label.col-sm-2.control-label(for='exercise-strength-date') Date
                        .col-sm-10
                            .input-group.date
                                input.form-control.input-readonly#exercise-strength-date(muscle="text" readonly)
                                .input-group-addon
                                    span.fa.fa-fw.fa-lg.fa-calendar
                    .form-group
                        label.col-sm-2.control-label(for='exercise-strength-time') Time
                        .col-sm-10
                            .input-group.bootstrap-timepicker.timepicker
                                input.form-control.input-readonly#exercise-strength-time(readonly)
                                .input-group-addon
                                    span.fa.fa-fw.fa-lg.fa-clock-o
                    .form-group
                        label.col-sm-2.control-label(for='exercise-strength-note') Note
                        .col-sm-10
                            input.form-control#exercise-strength-note
.row
    .col-sm-12
        button.btn.btn-success.pull-right#exercise-strength-submit
            i.fa.fa-lg.fa-plus-circle
            = ' '
            | Add Workout