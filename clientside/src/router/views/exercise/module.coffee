#-------------------------------------------------------------------------------
# Imports
#-------------------------------------------------------------------------------

Backbone = require 'backbone'

#-------------------------------------------------------------------------------
# Model
#-------------------------------------------------------------------------------

class Model extends Backbone.Model
  defaults:
    name:   ''
    rep:    ''
    set:    ''
    weight: ''

#-------------------------------------------------------------------------------
# Collection
#-------------------------------------------------------------------------------

class Collection extends Backbone.Collection
  url:  'api/exercise'
  model: Model

#-------------------------------------------------------------------------------
# Exports
#-------------------------------------------------------------------------------

exports.Model      = Model
exports.Collection = Collection
exports.View       = require './input/view'

