.modal.fade(role="dialog")#strength-modal-dialog
    .modal-dialog.modal-sm
        .modal-content

            .modal-header
                button.close(type='button', data-dismiss='modal') Ã—
                h4.modal-title Create a new workout

            .modal-body
                form.form-horizontal
                    // Nav tabs
                    ul.nav.nav-tabs(role='tablist')
                        li.active(role='presentation')
                            a(href='#strength-modal-basic' aria-controls='basic', role='tab', data-toggle='tab')
                                i.fa.fa-fw.fa-lg.fa-pencil
                                = ' '
                                | Basic
                        li(role='presentation')
                            a(href='#strength-modal-advance' aria-controls='advance', role='tab', data-toggle='tab')
                                i.fa.fa-fw.fa-lg.fa-cogs
                                = ' '
                                | Optional

                    br

                    // Tab panes

                    .tab-content

                        // Basic

                        #strength-modal-basic.tab-pane.active(role='tabpanel')
                            .form-group
                                .col-xs-12
                                    label.control-label(for='strength-modal-muscle') Muscle
                                .col-xs-12
                                    select.form-control#strength-modal-muscle
                            .form-group
                                .col-xs-12
                                    label.control-label(for='strength-modal-name') Name
                                .col-xs-12
                                    input.form-control#strength-modal-name(type='text' required)
                                    .help-block.with-errors
                            .form-group
                                .col-xs-12
                                    label.control-label Weekly Schedule
                                .col-xs-12
                                    .btn-group.btn-group-justifie
                                        .btn-group
                                            button.btn.btn-default#strength-modal-schedule0(type='button') S
                                        .btn-group
                                            button.btn.btn-default#strength-modal-schedule1(type='button') M
                                        .btn-group
                                            button.btn.btn-default#strength-modal-schedule2(type='button') T
                                        .btn-group
                                            button.btn.btn-default#strength-modal-schedule3(type='button') W
                                        .btn-group
                                            button.btn.btn-default#strength-modal-schedule4(type='button') T
                                        .btn-group
                                            button.btn.btn-default#strength-modal-schedule5(type='button') F
                                        .btn-group
                                            button.btn.btn-default#strength-modal-schedule6(type='button') S
                            .form-group
                                .col-xs-12
                                    .checkbox
                                        label
                                            input(type='checkbox')#strength-modal-body
                                            | Use body as weights

                        // Advance

                        #strength-modal-advance.tab-pane(role='tabpanel')
                            .form-group
                                .col-xs-12
                                    label.control-label Date Started
                                .col-xs-12
                                    div(style='overflow:hidden;')
                                        .form-group
                                            .row
                                                .col-xs-12
                                                    #strength-modal-date
                            .form-group
                                .col-xs-12
                                    label.control-label(for='strength-modal-note') Note
                                .col-xs-12
                                    textarea.form-control#strength-modal-note

                    hr
                    .form-group
                        .pull-right
                            .col-xs-12
                                button.btn.btn-default.btn-lg(data-dismiss="modal" type='button') Cancel
                                = ' '
                                button.btn.btn-primary.btn-lg(type="submit")
                                    i.fa.fa-fw.fa-lg.fa-save
                                    = ' '
                                    span save