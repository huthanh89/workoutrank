#strength-modal-view
.row
    .col-xs-12
        ol.breadcrumb(style='margin-bottom: 5px;')
            li#strength-home
                a Home
            li#strength-journals
                a Journals
            li.active
                a Entry
.row
    .col-sm-6
        .panel.panel-info
            .panel-heading.clearfix
                .pull-right
                    button.btn.btn-sm.btn-primary#strength-detail-add
                        i.fa.fa.fa-plus
                        = ' '
                        span Add
                .panel-title.clearfix
                    span Title
            .panel-body
                #strength-date-view
            #strength-table-view
    .col-sm-6
        .panel.panel-primary#strength-chart-panel
            .panel-body
                #strength-chart-view
            .panel-footer.clearfix
                a.pull-right Detail
                    = ' '
                    i.fa.fa-lg.fa-arrow-circle-o-right