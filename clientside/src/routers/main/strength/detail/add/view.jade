.modal.fade(role="dialog")
    .modal-dialog.modal-sm
        .modal-content

            .modal-header
                button.close(type='button', data-dismiss='modal') Ã—
                h4.modal-title Add a new session

            .modal-body
                form.form-horizontal(novalidate)
                    .form-group
                        .col-xs-12
                            label.control-label Timestamp
                        .col-xs-12
                            p.form-control-static
                                span#strength-modal-timestamp-date
                                = ' - '
                                i
                                    u#strength-modal-timestamp-time
                    .form-group#strength-modal-weight-container
                        .col-xs-12
                            label.control-label Weight
                        .col-xs-12
                            input.form-control#strength-modal-weight(type="number", placeholder='' required)
                    .form-group#strength-modal-weight-label-container
                        .col-xs-12
                            label.control-label Using Body
                        .col-xs-12
                            p.form-control-static
                                span#strength-modal-weight-label
                    hr
                    .form-group
                        .col-xs-12
                            label.control-label Reps
                        .col-xs-12
                            input.form-control#strength-modal-rep(type="number", placeholder='' required)
                    .form-group
                        .col-xs-12
                            .checkbox
                                label
                                    input(type='checkbox')#strength-modal-note-enable
                                    | Add comment
                        .col-xs-12
                            textarea.hide.form-control#strength-modal-note(type="text", placeholder='Optional')
                    hr
                    .form-group
                        .pull-right
                            .col-xs-12
                                button.btn.btn-default.btn-lg(data-dismiss="modal" type='button') Cancel
                                = ' '
                                button.btn.btn-primary.btn-lg(type="submit")
                                    i.fa.fa-fw.fa-lg.fa-save
                                    = ' '
                                    span save
