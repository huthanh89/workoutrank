.modal.fade(role="dialog")#strength-modal-dialog
    .modal-dialog.modal-sm
        .modal-content

            .modal-header
                button.close(type='button', data-dismiss='modal') Ã—
                h4.modal-title Create a new workout

            .modal-body
                form.form-horizontal#strength-modal-form
                    // Nav tabs
                    ul.nav.nav-tabs(role='tablist')
                        li.active(role='presentation')
                            a(href='#strength-modal-basic' aria-controls='basic', role='tab', data-toggle='tab')
                                i.fa.fa-fw.fa-lg.fa-pencil
                        li(role='presentation')
                            a(href='#strength-modal-advance' aria-controls='advance', role='tab', data-toggle='tab')
                                i.fa.fa-fw.fa-lg.fa-cogs
                        li(role='presentation')
                            a(href='#strength-modal-remove' aria-controls='advance', role='tab', data-toggle='tab')
                                i.fa.fa-fw.fa-lg.fa-trash
                    br

                    // Tab panes

                    .tab-content

                        // Basic

                        #strength-modal-basic.tab-pane.active(role='tabpanel')
                            .form-group
                                .col-xs-12
                                    label.control-label(for='strength-modal-muscle') Muscle
                                .col-xs-12
                                    select.form-control#strength-modal-muscle
                            .form-group
                                .col-xs-12
                                    label.control-label(for='strength-modal-name') Name
                                .col-xs-12
                                    input.form-control#strength-modal-name(required)
                                    .help-block.with-errors
                            .form-group
                                .col-xs-12
                                    .checkbox
                                        label
                                            input(type='checkbox')#strength-modal-body
                                            | Use body as weights

                        // Advance

                        #strength-modal-advance.tab-pane(role='tabpanel')
                            .form-group
                                .col-xs-12
                                    label.control-label(for='strength-modal-date') Date
                                .col-xs-12
                                    .input-group.date
                                        input.form-control.input-readonly#strength-modal-date(muscle="text" readonly)
                                        .input-group-addon.btn-info#strength-modal-date-btn
                                            span.fa.fa-fw.fa-lg.fa-calendar
                            .form-group
                                .col-xs-12
                                    label.control-label(for='strength-modal-time') Time
                                .col-xs-12
                                    .input-group.bootstrap-timepicker.timepicker
                                        input.form-control.input-readonly#strength-modal-time(readonly)
                                        .input-group-addon.btn-info#strength-modal-time-btn
                                            span.fa.fa-fw.fa-lg.fa-clock-o
                            .form-group
                                .col-xs-12
                                    label.control-label(for='strength-modal-note') Note
                                .col-xs-12
                                    input.form-control#strength-modal-note

                        // Remove

                        #strength-modal-remove.tab-pane(role='tabpanel')
                            br
                            .form-group
                                .col-xs-12
                                    button.btn.btn-danger.btn-block#strength-modal-delete(type="button")
                                        i.fa.fa-fw.fa-lg.fa-exclamation-circle
                                        = ' '
                                        span Delete
            .modal-footer
                .pull-right
                    button.btn.btn-default(type="button" data-dismiss="modal") Cancel
                    = ' '
                    button.btn.btn-primary#strength-modal-submit(type="submit") Save