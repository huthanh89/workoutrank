        #calendar-modal-view
.row
    .col-xs-12
        .panel.panel-info
            .panel-heading.clearfix
                .pull-right
                    button.btn.btn-xs.btn-primary#calendar-edit
                        i.fa.fa-fw.fa.fa-wrench
                        = ' '
                        span Edit
                .panel-title.clearfix
                    i.fa.fa-fw.fa-lg.fa-calendar-check-o
                    = ' '
                    | Schedule
            .panel-body
                #calendar-widget
            .panel-footer.clearfix
                a.pull-right#schedule-calendar-btn
                    i.fa.fa-lg.fa-calendar-check-o
                a.pull-right#schedule-table-edit
                    i.fa.fa-lg.fa-pencil-square-o
