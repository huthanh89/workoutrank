#weight-modal-view
.row
    .col-xs-12
        ol.breadcrumb(style='margin-bottom: 5px;')
            li#weight-home
                a Home
            li.active
                span Weight
                i.fa.fa-fw.fa-lg.fa-tachometer
            .pull-right
                i.fa.fa-fw.fa-lg.fa-question-circle#weight-help(style="cursor:pointer")
