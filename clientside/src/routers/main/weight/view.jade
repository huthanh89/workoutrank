                h3.panel-title Weight Logs
            .panel-body
                #weight-date-view
            #weight-table-view
.row
    .col-md-8.col-center
        .panel.panel-default
            .panel-body
                #weight-calendar-view
.row
    .col-md-8.col-center
        .panel.panel-default
            .panel-body
                #weight-graph-view
