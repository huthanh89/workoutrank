.modal.fade(role="dialog")#cardio-modal-dialog
    .modal-dialog.modal-sm
        .modal-content

            .modal-header
                button.close(type='button', data-dismiss='modal') Ã—
                h4.modal-title Create Exercise

            .modal-body
                form.form-horizontal
                    .form-group
                        .col-xs-12
                            label.control-label(for='cardio-modal-name') Exercise Name
                        .col-xs-12
                            input.form-control#cardio-modal-name(type='text' required minlength="1" maxlength="25")
                            .help-block.with-errors

                    .form-group
                        .col-xs-12
                            .checkbox
                                label
                                    input(type='checkbox')#cardio-modal-note-enable
                                    | Add note
                        .col-xs-12
                            textarea.hide.form-control#cardio-modal-note(placeholder='Optional' minlength="1" maxlength="250")
                    hr
                    .form-group
                        .col-xs-12
                            .pull-right
                                button.btn.btn-default.btn-lg(data-dismiss="modal" type='button') Cancel
                                = ' '
                                button.btn.btn-primary.btn-lg#cardio-modal-submit(type="submit")
                                    i.fa.fa-fw.fa-lg.fa-save
                                    = ' '
                                    span save
