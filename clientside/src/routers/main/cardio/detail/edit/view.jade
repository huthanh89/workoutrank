.modal.fade(role="dialog")#cardio-modal-dialog
    .modal-dialog.modal-sm
        .modal-content

            .modal-header
                button.close(type='button', data-dismiss='modal') Ã—
                h4.modal-title Create a new workout

            .modal-body
                form.form-horizontal#cardio-modal-form
                    // Nav tabs
                    ul.nav.nav-tabs(role='tablist')
                        li.active(role='presentation')
                            a(href='#cardio-modal-basic' aria-controls='basic', role='tab', data-toggle='tab')
                                i.fa.fa-fw.fa-lg.fa-pencil
                        li(role='presentation')
                            a(href='#cardio-modal-remove' aria-controls='advance', role='tab', data-toggle='tab')
                                i.fa.fa-fw.fa-lg.fa-trash
                    br

                    // Tab panes

                    .tab-content

                        // Basic

                        #cardio-modal-basic.tab-pane.active(role='tabpanel')
                            .form-group
                                .col-xs-12
                                    label.control-label(for='cardio-modal-muscle') Muscle
                                .col-xs-12
                                    select.form-control#cardio-modal-muscle(multiple='multiple')
                            .form-group
                                .col-xs-12
                                    label.control-label(for='cardio-modal-name') Name
                                .col-xs-12
                                    input.form-control#cardio-modal-name(required minlength="1" maxlength="25")
                                    .help-block.with-errors
                            .form-group
                                .col-xs-12
                                    .checkbox
                                        label
                                            input(type='checkbox')#cardio-modal-body
                                            | Use body as weights
                            .form-group
                                .col-xs-12
                                    label.control-label(for='cardio-modal-note') Note
                                .col-xs-12
                                    textarea.form-control#cardio-modal-note(placeholder='Optional' minlength="1" maxlength="250")
                            hr
                            .form-group
                                .col-xs-12
                                    .pull-right
                                        button.btn.btn-default.btn-lg(data-dismiss="modal" type='button') Cancel
                                        = ' '
                                        button.btn.btn-primary.btn-lg#cardio-modal-submit(type="submit")
                                            i.fa.fa-fw.fa-lg.fa-save
                                            = ' '
                                            span save
                        // Remove

                        #cardio-modal-remove.tab-pane(role='tabpanel')
                            br
                            .form-group
                                .col-xs-12
                                    button.btn.btn-danger.btn-block#cardio-modal-delete(type="button")
                                        i.fa.fa-fw.fa-lg.fa-exclamation-circle
                                        = ' '
                                        span Delete