.modal.fade(role="dialog")
    .modal-dialog.modal-sm
        .modal-content

            .modal-header
                button.close(type='button', data-dismiss='modal') Ã—
                h4.modal-title Add a new session

            .modal-body
                form.form-horizontal(novalidate)
                    .form-group
                        .col-xs-12
                            label.control-label Timestamp
                        .col-xs-12
                            p.form-control-static
                                span#cardio-modal-timestamp-date
                                = ' - '
                                i
                                    u#cardio-modal-timestamp-time
                    hr
                    .form-group
                        .col-xs-12
                            label.control-label Duration
                        .col-xs-12
                            input.form-control#cardio-modal-duration(type="number", placeholder='Required' required)
                    .form-group
                        .col-xs-12
                            label.control-label Intensity (0 - 100)
                        .col-xs-12
                            input.form-control#cardio-modal-intensity(type="number", placeholder='Optional')
                    .form-group
                        .col-xs-12
                            label.control-label Speed
                        .col-xs-12
                            input.form-control#cardio-modal-speed(type="number", placeholder='Optional')
                    .form-group
                        .col-xs-12
                            .checkbox
                                label
                                    input(type='checkbox')#cardio-modal-note-enable
                                    | Add comment
                        .col-xs-12
                            textarea.hide.form-control#cardio-modal-note(type="text", placeholder='Optional')
                    hr
                    .form-group
                        .pull-right
                            .col-xs-12
                                button.btn.btn-default.btn-lg(data-dismiss="modal" type='button') Cancel
                                span &nbsp
                                button.btn.btn-primary.btn-lg(type="submit")
                                    i.fa.fa-fw.fa-lg.fa-save
                                    span &nbsp
                                    span save
