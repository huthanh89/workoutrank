#-------------------------------------------------------------------------------
# Imports
#-------------------------------------------------------------------------------

Backbone = require 'backbone'

#-------------------------------------------------------------------------------
# Model
#-------------------------------------------------------------------------------

class Model extends Backbone.Model

  url: 'api/signup'

  defaults:
    firstname: ''
    lastname:  ''
    email:     ''
    password:  ''
    captcha:   ''

  validation:
    firstname:
      required:  true

#-------------------------------------------------------------------------------
# Exports
#-------------------------------------------------------------------------------

exports.Model = Model
exports.View  = require './view/view'

