.row
    .col-sm-12
        .panel.panel-info
            .panel-heading
                h3.panel-title
                    i.fa.fa-fw.fa-lg.fa-user
                    = ' '
                    | Account
            .panel-body
                form.form-horizontal
                    .form-group
                        label.col-sm-2.control-label(for='profile-username') Username
                        .col-sm-10
                            input.form-control#profile-username(type="text" required)
                    .form-group
                        label.col-sm-2.control-label(for='profile-firstname') First Name
                        .col-sm-10
                            input.form-control#profile-firstname(type="text" required)
                    .form-group
                        label.col-sm-2.control-label(for='profile-lastname') Last Name
                        .col-sm-10
                            input.form-control#profile-lastname(type="text" required)
                    .form-group
                        label.col-sm-2.control-label(for='index-signup-gender') Gender
                        .col-sm-10
                            .radio.radio-inline#index-signup-gender
                                label
                                    input(type='radio', name='optradio')
                                    | Female
                            .radio.radio-inline
                                label
                                    input(type='radio', name='optradio')
                                    | Male
                    .form-group
                        label.col-sm-2.control-label(for='profile-email') Email
                        .col-sm-10
                            input.form-control#profile-email(type="email" required)
                    .form-group
                        label.col-sm-2.control-label(for='profile-password') Password
                        .col-sm-10
                            input.form-control#profile-password(type="password")
                    .form-group
                        .col-sm-12
                            button.btn.btn-primary.pull-right
                                i.fa.fa-cloud-upload
                                = ' '
                                | Update